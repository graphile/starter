{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.lintTask.enable": true,
  "eslint.lintTask.options": "--ext .js,.jsx,.ts,.tsx,.graphql .",
  "eslint.validate": [
    { "autoFix": true, "language": "javascript" },
    { "autoFix": true, "language": "javascriptreact" },
    { "autoFix": true, "language": "typescript" },
    { "autoFix": true, "language": "typescriptreact" },
    { "autoFix": false, "language": "graphql" }
  ],
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // ESLint calls prettier for these types already, so don't let them squabble
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "prettier.disableLanguages": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  }
}
