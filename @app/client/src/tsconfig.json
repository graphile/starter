{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "incremental": false,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "declaration": false,
    "declarationMap": false,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "references": [
    {
      "path": "../../config"
    },
    {
      "path": "../../graphql"
    },
    {
      "path": "../../components"
    },
    {
      "path": "../../lib"
    }
  ]
}
