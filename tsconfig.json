{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "noEmitOnError": true,

    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "preserveWatchOutput": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["@app/*"]
    }
  },
  "include": [],
  "exclude": ["@app/e2e"],
  "references": [
    { "path": "@app/config" },
    { "path": "@app/components" },
    { "path": "@app/graphql" },
    { "path": "@app/server" },
    { "path": "@app/worker" }
  ]
}
